{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.icns",
      "icons/favicon.ico",
      "icons/icon.png"
    ]
  },
  "productName": "Ballista",
  "mainBinaryName": "Ballista",
  "identifier": "com.sereen.io",
  "plugins": {},
  "app": {
    "withGlobalTauri": false,
    "trayIcon": {
      "iconPath": "icons/favicon.ico",
      "title": "Ballista"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Ballista",
        "width": 900,
        "height": 600,
        "useHttpsScheme": true
      }
    ]
  }
}